<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.iluxaz.musicprojectapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity" />

        <activity
            android:name=".player.AloneActivity"
            android:theme="@style/MusicPlayerScreenTheme" />

        <activity
            android:name=".player.MomentActivity"
            android:theme="@style/MusicPlayerScreenTheme" />

        <activity
            android:name=".player.DoNotThinkActivity"
            android:theme="@style/MusicPlayerScreenTheme" />

        <activity
            android:name=".player.TrackListActivity"
            android:theme="@style/MusicPlayerScreenTheme" />

        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>